{
  "name": "@pmun/utils",
  "type": "module",
  "version": "0.2.4",
  "description": "Sunpm 的主观个人工具函数库",
  "author": "sunpm",
  "license": "MIT",
  "homepage": "https://github.com/sunpm/sunpm-utils",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sunpm/sunpm-utils.git"
  },
  "keywords": [
    "utils",
    "typescript",
    "helpers",
    "javascript",
    "utility-functions"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "eslint . --fix",
    "prepublishOnly": "pnpm build",
    "docs:deploy": "typedoc && gh-pages -d docs",
    "docs:watch": "typedoc --watch",
    "predocs": "typedoc",
    "docs:dev": "typedoc && vitepress dev",
    "docs:vitepress": "vitepress build",
    "docs:build": "typedoc && pnpm docs:vitepress",
    "release": "npm version patch && npm publish --access public && git push && git push --tags"
  },
  "dependencies": {
    "dayjs": "^1.11.13"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.11.0",
    "@types/node": "^22.13.15",
    "eslint": "^9.23.0",
    "eslint-plugin-format": "^1.0.1",
    "gh-pages": "^6.3.0",
    "lint-staged": "^15.5.0",
    "simple-git-hooks": "^2.12.1",
    "tsup": "^8.4.0",
    "typedoc": "^0.28.3",
    "typedoc-plugin-markdown": "^4.6.1",
    "typedoc-vitepress-theme": "^1.1.2",
    "typescript": "^5.8.2",
    "vitepress": "^1.6.3",
    "vitest": "^3.1.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  }
}
