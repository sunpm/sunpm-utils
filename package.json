{
  "name": "sunpm-utils",
  "version": "0.1.0",
  "description": "Sunpm 的个人工具函数库",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "eslint . --fix",
    "prepublishOnly": "pnpm build",
    "postinstall": "npx simple-git-hooks"
  },
  "keywords": [
    "utils",
    "typescript",
    "helpers",
    "javascript",
    "utility-functions"
  ],
  "author": "sunpm",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sunpm/sunpm-utils.git"
  },
  "homepage": "https://github.com/sunpm/sunpm-utils#readme",
  "license": "ISC",
  "devDependencies": {
    "@antfu/eslint-config": "^4.11.0",
    "@types/node": "^22.13.15",
    "eslint": "^9.23.0",
    "eslint-plugin-format": "^1.0.1",
    "lint-staged": "^15.5.0",
    "simple-git-hooks": "^2.12.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "vitest": "^3.1.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  }
}
